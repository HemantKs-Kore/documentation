{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@kore.services/*": [ "apps/searchassist/src/app/services/*"],
      "@kore.environment": [ "apps/searchassist/src/environments/environment"],
      "@kore.components/*":["apps/searchassist/src/app/components/*"],
      "@kore.helpers/*":["apps/searchassist/src/app/helpers/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
